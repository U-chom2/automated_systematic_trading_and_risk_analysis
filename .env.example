# アプリケーション設定
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# API設定
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# データベース設定
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/trading_db
ENABLE_TIMESCALEDB=True
TIMESCALE_CHUNK_INTERVAL=1 month

# Redis設定
REDIS_URL=redis://localhost:6379/0

# 市場データプロバイダー設定
YFINANCE_ENABLED=True
YAHOO_FINANCE_API_KEY=
ALPHA_VANTAGE_API_KEY=
QUANDL_API_KEY=

# AI/ML設定
MODEL_PATH=./models
PPO_MODEL_CHECKPOINT=
SENTIMENT_MODEL_NAME=cl-tohoku/bert-base-japanese-v3

# 取引設定
DEFAULT_COMMISSION_RATE=0.001
DEFAULT_SLIPPAGE_RATE=0.0005
MAX_POSITIONS=20
MIN_POSITION_SIZE=10000
MAX_POSITION_SIZE=1000000

# リスク管理設定
MAX_PORTFOLIO_RISK=0.15
MAX_POSITION_RISK=0.02
STOP_LOSS_PERCENTAGE=0.05
TAKE_PROFIT_PERCENTAGE=0.10

# バックテスト設定
BACKTEST_INITIAL_CAPITAL=10000000
BACKTEST_REBALANCE_FREQUENCY=weekly

# ログ設定
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=

# セキュリティ設定
ACCESS_TOKEN_EXPIRE_MINUTES=30

# キャッシュ設定
CACHE_TTL=300
MARKET_DATA_CACHE_TTL=60

# モニタリング設定
ENABLE_METRICS=True
METRICS_PORT=8001

# ワーカー設定
WORKER_COUNT=4
WORKER_CLASS=uvicorn.workers.UvicornWorker